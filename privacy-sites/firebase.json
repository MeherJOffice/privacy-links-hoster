{
    "functions": {
        "source": "functions",
        "predeploy": [ "npm --prefix \"$RESOURCE_DIR\" run build" ]
    },
    "hosting": {
        "public": "web",
        "ignore": [ "**/.*", "**/node_modules/**" ],
        "headers": [
            {
                "source": "/index.html",
                "headers": [
                    {
                        "key": "Cache-Control",
                        "value": "no-store"
                    }
                ]
            },
            {
                "source": "/main.js",
                "headers": [
                    {
                        "key": "Cache-Control",
                        "value": "no-store"
                    }
                ]
            }
        ],
        "rewrites": [
            {
                "source": "/createPolicySite",
                "function": {
                    "functionId": "createPolicySite",
                    "region": "us-central1"
                }
            },
            {
                "source": "**",
                "destination": "/index.html"
            }
        ]
    }
}
